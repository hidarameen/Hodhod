# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/botnexus

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
API_ID=your_telegram_api_id_here
API_HASH=your_telegram_api_hash_here

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GROQ_API_KEY=gsk_your-groq-api-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# Session & Security
SESSION_SECRET=change-this-to-a-random-string-in-production
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password-here

# Bot Configuration
MAX_RESTART_ATTEMPTS=5
RESTART_DELAY=5000
LOG_LEVEL=info

# Optional: Monitoring & Analytics
SENTRY_DSN=
DATADOG_API_KEY=

# Optional: Caching
REDIS_URL=

# Optional: Email Notifications
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# Optional: Feature Flags
ENABLE_VIDEO_PROCESSING=true
ENABLE_AI_SUMMARIZATION=true
ENABLE_MESSAGE_FORWARDING=true
